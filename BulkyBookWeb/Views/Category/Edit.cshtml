@model Category

<form asp-action="Edit" method="POST">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Category / Edit</h2>
        </div>
        @* <div asp-validation-summary="All"></div> *@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control">
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px">Edit</button>
        <a asp-area="" asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width: 150px"><i class="bi bi-arrow-bar-left"></i> List</a>
    </div>
</form>

@section Scripts {
    @{ <partial name="_ValidationScriptsPartial" />   }
}
        